@model IEnumerable<cmcs2.Models.WorkClaim>

@{
    ViewData["Title"] = "My Claims";
}

<h2>My Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Department</th>
            <th>Rate per Job (R)</th>
            <th>Jobs</th>
            <th>Total (R)</th>
            <th>Status</th>
            <th>Reject Reason</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>@claim.Department</td>
                <td>@claim.RatePerJob.ToString("F2")</td>
                <td>@claim.NumberOfJobs</td>
                <td>@claim.TotalAmount.ToString("F2")</td>
                <td>@claim.Status</td>
                <td>@claim.RejectReason</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Claim</a>
